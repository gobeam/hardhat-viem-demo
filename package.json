{
  "name": "hardhat-project",
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "chain": "npx hardhat node",
    "test:hardhat": "npx hardhat --show-stack-traces --network hardhat test",
    "test": "npx hardhat test",
    "deploy:sepolia": "npx hardhat --typecheck run --network sepolia scripts/deploy.ts",
