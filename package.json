    "coverage": "npx hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "hardhat": "^2.21.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
